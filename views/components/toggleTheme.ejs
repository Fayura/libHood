<style>
  .theme {
    height: 0;
    width: 0;
    visibility: hidden;
  }
  .switch {
    position: relative;
    display: flex;
    cursor: pointer;
    width: 50px;
    height: 25px;
    border-radius: 50px;
    background: var(--background);
    transition: background 0.2s;
  }
  .circle {
    content: "";
    position: absolute;
    width: 25px;
    height: 25px;
    border-radius: 40px;
    background: var(--foreground-lite);
    transition: 0.2s;
  }
  .theme:checked + .switch .circle {
    transform: translateX(+100%);
  }
</style>
<input type="checkbox" class="theme" id="theme-switch" />
<label for="theme-switch" class="switch">
  <span class="circle"></span>
</label>
<script>
  const check = document.querySelector(".theme");

  check.addEventListener("click", () => {
    check.classList.toggle("checked");
    if (check.classList.contains("checked")) {
      document.documentElement.style.setProperty("--background", "#cccccc");
      document.documentElement.style.setProperty("--foreground", "#1a1a1a");
      document.documentElement.style.setProperty(
        "--background-lite",
        "#ffffff"
      );
      document.documentElement.style.setProperty(
        "--foreground-lite",
        "#2a2a2a"
      );
    } else {
      document.documentElement.style.setProperty("--background", "#1a1a1a");
      document.documentElement.style.setProperty("--foreground", "#cccccc");
      document.documentElement.style.setProperty(
        "--background-lite",
        "#2a2a2a"
      );
      document.documentElement.style.setProperty(
        "--foreground-lite",
        "#ffffff"
      );
    }
  });
</script>
